@model iStay.Models.HostelService
@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<style>
    .red {
        color: red;
    }

    .text-area {
        padding: 8px 15px 8px 15px;
        border: 1px solid #ccc;
        border-radius: 0px;
        margin-bottom: 5px;
        margin-top: 2px;
        width: 100%;
        box-sizing: border-box;
        font-family: montserrat;
        color: #2C3E50;
        background-color: #ECEFF1;
        font-size: 16px;
        letter-spacing: 1px;
    }
</style>
<div class="row justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-10 text-center p-0 mt-3 mb-2">
        <div class="card" style="padding:25px">
            <h2 id="heading">Room Service That's You are providing</h2>
            @*<p>Fill all menatory fields<span> *</span> </p>*@

            @using (Html.BeginForm("AddService", "Hostel", FormMethod.Post, new { id = "msform" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <!-- fieldsets Start-->
                <fieldset>
                    <div class="form-card">
                        <label class="fieldlabels">Hostel Service: <span class="text-danger"> *</span></label>
                        @Html.DropDownListFor(model => model.Service, new List<SelectListItem>
                                                {
                                                    new SelectListItem{Text="AC", Value="AC"},
                                                    new SelectListItem{Text="Mess", Value="Mess"},
                                                    new SelectListItem{Text="Gym", Value="Gym"},
                                                }, "-----Select-----",
                                                new 
                                                {
                                                    @class = "text-area" 
                                                })
                        @Html.ValidationMessageFor(model => model.Service, "", new { @class = "text-danger" })
                        <br />
                    <label class="fieldlabels">Service Charges<span class="text-danger"> *</span></label>
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "input" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                    <input type="submit" class=" action-button" value="Add Service" />

                    </div>
                </fieldset>
                <!-- fieldsets END-->
            }
        </div>
    </div>
</div>

