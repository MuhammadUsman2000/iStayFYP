@model iStay.Models.Hostel_InstitutesModel

    ViewBag.Title = "ChoosenDropDown";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ChoosenDropDown</h2>

@using (Html.BeginForm("ChoosenDropDown", "Hostel", FormMethod.Post))
{
    <div class="row">
        <div class="col">
            <label class="fieldlabels">Institute.: *</label>
            @Html.DropDownListFor(model => model.ID,
           Model.GetInstitutesList.Select(x=> new SelectListItem {Text = x.Institutes_Name,
               Value=x.ID.ToString()}), new { @class = "form-control chosen-select" })
            @Html.ValidationMessageFor(model => model.Institutes_Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="submit" value="submit"/>
}
<script>
    $('chosen-select').chosen();
</script>

